<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">
	<managed-bean>
		<managed-bean-name>userInterfaceBean</managed-bean-name>
		<managed-bean-class>edu.wayne.cs.raptor.User</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>patientData</managed-bean-name>
		<managed-bean-class>edu.wayne.cs.raptor.Patient</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>user2</managed-bean-name>
		<managed-bean-class>edu.wayne.cs.raptor.User2</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>currentTimeAndDate</managed-bean-name>
		<managed-bean-class>edu.wayne.cs.raptor.currentTimeAndDate</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<description>patient vitals</description>
		<managed-bean-name>vitals</managed-bean-name>
		<managed-bean-class>edu.wayne.cs.raptor.Vitals</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<description>encounter data</description>
		<managed-bean-name>encounter</managed-bean-name>
		<managed-bean-class>edu.wayne.cs.raptor.Encounter</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<description>for coverting between metric and US customary units, and calculating BMI</description>
		<managed-bean-name>unitConverter</managed-bean-name>
		<managed-bean-class>edu.wayne.cs.raptor.UnitConverter</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
	<from-view-id>/login.jsp</from-view-id>
		<navigation-case>
			<from-action>#{userInterfaceBean.checkPassword}</from-action>
			<from-outcome>valid</from-outcome>
			<to-view-id>/add_search_patient.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{userInterfaceBean.checkPassword}</from-action>
			<from-outcome>invalid</from-outcome>
			<to-view-id>/login.jsp</to-view-id>
		</navigation-case>
	
	</navigation-rule>
 

</faces-config>
